page {
  height: 100%;
}
.pyg_cate {
  height: 100%;
}
.cate_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cate_container .left_menu {
  flex: 2;
}
.cate_container .left_menu .cate_title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.cate_container .left_menu .active {
  color: var(--themeColor);
  border-left: 8rpx solid currentColor;
}
.cate_container .right_menu {
  flex: 5;
}
.cate_container .right_menu .cate_goods .goods_title {
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}
.cate_container .right_menu .cate_goods .goods_title .title_delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cate_container .right_menu .cate_goods .goods_container {
  display: flex;
  flex-wrap: wrap;
}
.cate_container .right_menu .cate_goods .goods_container navigator {
  width: 33.33%;
  text-align: center;
  font-size: 26rpx;
}
.cate_container .right_menu .cate_goods .goods_container navigator image {
  width: 50%;
}
